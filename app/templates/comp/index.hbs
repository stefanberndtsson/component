<div class="container">
  <div class="info-box">
    <div class="row info-box-query">
      <div class="col-xs-12">
        <div class="form-group">
	  <div class="input-group">
	    {{input id="search-query" value=searchQuery classBinding=":form-control"
            action="search" placeholder="Enter query"}}
	    <span class="input-group-btn">
	      <button class="btn btn-primary" {{action 'search' searchQuery}}>Search</button>
	    </span>
	  </div>
        </div>
      </div>
    </div>
  </div>

  <div class="info-box">
    <div class="row info-box-pagination">
      {{#if model.meta.pagination.per_page}}
        {{#pagination-pager pagination=model.meta.pagination isDesktop=isDesktop}}
          <div class="col-xs-12 pages-title">
            {{pagination-pager-data pagination=model.meta.pagination total=model.meta.query.total isMobile=isMobile}}
            {{#if controllers.application.loading}}
              <div class="loader"></div>
            {{/if}}
          </div>
            {{/pagination-pager}}
      {{/if}}
    </div>
    {{#if model}}
      {{#if isMobile}}
        <div class="row info-box-body">
          <ul class="list-group hidden-md hidden-lg">
            {{#each item in model}}
              {{comp-list-item-mobile item=item isMobile=isMobile}}
            {{/each}}
          </ul>
        </div>
      {{/if}}
    {{/if}}
  </div>

  {{#if model}}
    {{#if isDesktop}}
      <div class="info-box">
        <div class="row info-box-header">
          <div class="col-xs-12">
            {{pagination-pager-data pagination=model.meta.pagination total=model.meta.query.total isDesktop=isDesktop}}
            {{#if controllers.application.loading}}
              <div class="loader"></div>
            {{/if}}
          </div>
        </div>
        <div class="row info-box-body">
          <div class="col-md-12 hidden-sm hidden-xs info-box-table">
            <table class="table">
	      <thead>
	        <tr class="info-box-line info-box-line-header">
	          <th>Name</th>
	          <th>Summary</th>
	          <th>Amount</th>
	          <th>Tags</th>
	          <th>Datasheet</th>
	        </tr>
	      </thead>
	      <tbody>
	        {{#each item in model}}
                  {{comp-list-item-desktop item=item isDesktop=isDesktop}}
	        {{/each}}
	      </tbody>
            </table>
          </div>
        </div>
      </div>
    {{/if}}
  {{/if}}
</div>
