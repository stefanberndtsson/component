<div class="info-box">
  <div class="row info-box-header">
    <h3 class="col-xs-12">{{name}}</h3>
  </div>
  <div class="row info-box-body {{typeList:info-box-lines}}">
    {{#each files as |file|}}
      {{#if typeThumbnail}}
        <div class="col-xs-6 col-sm-4 col-md-6 col-lg-4">
	  <div class="thumbnail-asset">
	    {{file-link file=file type='image' size=imageSize}}
	    {{#if session.isAuthenticated}}
	      <span {{action 'removeAsset' componentId file.id}}
                class="remove-asset glyphicon glyphicon-remove"></span>
	    {{/if}}
	  </div>
        </div>
      {{/if}}
      {{#if typeList}}
        <div class="col-xs-12 info-box-line">
	  {{file-link file=file}}
	  {{#if session.isAuthenticated}}
	    <span {{action 'removeAsset' componentId file.id}}
              class="pull-right glyphicon glyphicon-remove"></span>
	  {{/if}}
        </div>
      {{/if}}
    {{/each}}
  </div>
</div>
