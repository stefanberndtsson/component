<div class="col-md-6 col-lg-6">
  <div class="info-box">
    <div class="row info-box-header">
      <h3 class="col-xs-12">{{headerPrefix}}{{model.name}}</h3>
      <div class="header-button header-button-right">
        <button class="btn btn-primary" {{action 'saveComponent'}}>Save</button>
      </div>
    </div>
    <div class="row info-box-body">
      <div class="info-box-body-content">
        {{#if error}}
          <div class="col-xs-12">
            <div class="alert alert-danger">
              Unable to save component
            </div>
          </div>
        {{/if}}
        <div class="form-group col-xs-12">
          <div class="col-xs-6 col-md-4">
            <label>Name</label>
          </div>
          <div class="col-xs-6 col-md-8">
            {{#if errors.name}}
              {{#each errors.name as |msg|}}
                <span class="has-error"><span class="glyphicon glyphicon-ban-circle"></span> {{msg}}</span>
              {{/each}}
            {{/if}}
          </div>
          <div class="col-xs-12">
            {{input type="text" classBinding=":form-control :col-xs-6" value=model.name}}
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group col-xs-12">
          <div class="col-xs-6 col-md-4">
            <label>Summary</label>
          </div>
          <div class="col-xs-6 col-md-8">
            {{#if errors.summary}}
              {{#each errors.summary as |msg|}}
                <span class="has-error"><span class="glyphicon glyphicon-ban-circle"></span> {{msg}}</span>
              {{/each}}
            {{/if}}
          </div>
          <div class="col-xs-12">
            {{input type="text" classBinding=":form-control :col-xs-6" value=model.summary}}
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group col-xs-12">
          <div class="col-xs-6 col-md-4">
            <label>Description</label>
          </div>
          <div class="col-xs-6 col-md-8">
            {{#if errors.description}}
              {{#each errors.description as |msg|}}
                <span class="has-error"><span class="glyphicon glyphicon-ban-circle"></span> {{msg}}</span>
              {{/each}}
            {{/if}}
          </div>
          <div class="col-xs-12">
            {{textarea classBinding=":form-control" cols="60" rows="10" value=model.description}}
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group tags-form col-xs-12">
          <div class="col-xs-12">
            <label>Tags</label>
          </div>
          <div class="col-xs-8 col-md-6">
            {{input type="text" classBinding=":form-control" value=tagInput enter='addTag'}}
          </div>
          <div class="col-xs-12" style="margin-top: 3px;">
            <span class="label label-default" style="visibility: hidden; width: 0; padding-left: 0; padding-right: 0;">&nbsp;</span>
            {{#each model.tags as |tag|}}
              <span class="label label-default"><span class="glyphicon glyphicon-remove tag-remove" {{action 'removeTag' tag}}></span> {{tag}}</span>
            {{/each}}
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group col-xs-12">
          <div class="col-xs-6 col-md-4">
            <label>Amount</label>
          </div>
          <div class="col-xs-12">
            {{view "select" content=amountsSelection
            value=model.amount
            optionValuePath="content.name"
            optionLabelPath="content.name"}}
          </div>
        </div>
        {{#if needsValue}}
          <div class="clearfix"></div>
          <div class="form-group col-xs-12">
            <div class="col-xs-6 col-md-4">
              <label>Value</label>
            </div>
            <div class="col-xs-6 col-md-8">
              {{#if errors.amount_value}}
                {{#each errors.amount_value as |msg|}}
                  <span class="has-error"><span class="glyphicon glyphicon-ban-circle"></span> {{msg}}</span>
                {{/each}}
              {{/if}}
            </div>
            <div class="col-xs-12">
              {{input type="text" classBinding=":form-control" value=model.amount_value}}
            </div>
          </div>
        {{/if}}
        <div class="clearfix"></div>
        <div class="form-group col-xs-12">
          <div class="col-xs-6 col-md-4">
            <label>
              {{input type="checkbox" checked=model.spares}} Spares
            </label>
          </div>
          <div class="col-xs-6 col-md-8">
            {{#if errors.spares}}
              {{#each errors.spares as |msg|}}
                <span class="has-error" style="line-height: 1.8;"><span class="glyphicon glyphicon-ban-circle"></span> {{msg}}</span>
              {{/each}}
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
